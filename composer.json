{
  "name": "firecms-ext/utils",
  "type": "library",
  "license": "MIT",
  "keywords": [
    "php",
    "utils",
    "age",
    "toTree",
    "hyperf"
  ],
  "description": "hyperf 扩展：常用工具函数",
  "autoload": {
    "psr-4": {
      "FirecmsExt\\Utils\\": "src/"
    },
    "files": [
      "src/Functions.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "HyperfTest\\": "tests"
    }
  },
  "require": {
    "php": ">=8.0",
    "ezyang/htmlpurifier": "^4.14",
    "hyperf/cache": "~v2.0",
    "hyperf/config": "^2.2",
    "hyperf/db-connection": "^2.2",
    "hyperf/di": "~v2.0",
    "hyperf/framework": "~v2.0",
    "hyperf/http-message": "~v2.0",
    "hyperf/http-server": "~v2.0",
    "hyperf/model-cache": "^2.2",
    "hyperf/redis": "~v2.0",
    "hyperf/snowflake": "v2.2.33.1",
    "nesbot/carbon": "^2.62"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.0",
    "mockery/mockery": "^1.0",
    "phpstan/phpstan": "^1.0",
    "phpunit/phpunit": ">=7.0",
    "swoole/ide-helper": "^4.5"
  },
  "suggest": {
    "swow/swow": "Required to create swow components."
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "scripts": {
    "test": "phpunit -c phpunit.xml --colors=always",
    "analyse": "phpstan analyse --memory-limit 1024M -l 0 ./src",
    "cs-fix": "php-cs-fixer fix $1"
  },
  "extra": {
    "hyperf": {
      "config": "FirecmsExt\\Utils\\ConfigProvider"
    }
  }
}
